+#[cfg(not(target_os = "macos"))]
+fn create_save_file_dialog(filter: (String, Vec<String>), title: &'static str) -> AsyncFileDialog {
+    // Set default filename with the first extension
+    let default_filename = if let Some(first_ext) = filter.1.first() {
+        format!("untitled.{}", first_ext)
+    } else {
+        "untitled".to_string()
+    };
+    
+    AsyncFileDialog::new()
+        .set_title(title)
+        .set_file_name(&default_filename)
